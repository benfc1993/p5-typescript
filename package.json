{
    "name": "p5-typescript",
    "version": "3.5.0",
    "description": "A framework to make using p5 with typescript that much smoother.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm dist/bundle.js",
        "start": "snowpack dev --config dev.snowpack.config.js",
        "build": "snowpack build --config prod.snowpack.config.js && tsc -p declarations.tsconfig.json && cp src/p5.d.ts dist/p5.d.ts",
        "test": "jest src/lib/__tests__"
    },
    "pre-commit": [
        "test"
    ],
    "bin": {
        "p5-ts-types": "./bin/types",
        "p5-ts-setup": "./bin/setup"
    },
    "keywords": [
        "typescript",
        "p5",
        "ts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/benfc1993/p5-typescript.git"
    },
    "homepage": "https://github.com/benfc1993/p5-typescript#readme",
    "author": "Ben Feldberg Collins",
    "license": "MIT",
    "devDependencies": {
        "@snowpack/plugin-typescript": "^1.2.1",
        "@types/jest": "^29.5.1",
        "@types/node": "^16.10.3",
        "browser-sync": "^2.27.5",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "pre-commit": "^1.2.2",
        "snowpack": "^3.8.8",
        "ts-jest": "^29.1.0",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@types/p5": "^1.3.1",
        "p5": "^1.5.0"
    }
}
