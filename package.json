{
    "name": "p5-typescript",
    "version": "4.2.1",
    "description": "A framework to make using p5 with typescript that much smoother.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm dist/bundle.js",
        "start": "yarn build && esbuild ./example/index.ts --bundle --watch --outdir=./example --servedir=./example",
        "build": "dts-bundle-generator -o ./dist/index.d.ts ./src/index.ts && node ./esbuild.mjs",
        "build:example": "esbuild ./example/index.ts --bundle --outdir=temp-build",
        "test": "jest src/lib/__tests__",
        "lint": "eslint ./src"
    },
    "pre-commit": [
        "test",
        "lint"
    ],
    "bin": {
        "p5-ts-types": "./bin/types"
    },
    "keywords": [
        "typescript",
        "p5",
        "ts"
    ],
    "repository": "git+https://github.com/benfc1993/p5-typescript.git",
    "homepage": "https://github.com/benfc1993/p5-typescript#readme",
    "author": "Ben Feldberg Collins",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@types/node": "^16.10.3",
        "@types/p5": "^1.7.6",
        "browser-sync": "^3.0.2",
        "dts-bundle-generator": "^9.3.1",
        "esbuild": "^0.20.1",
        "eslint": "^8.57.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "pre-commit": "^1.2.2",
        "ts-jest": "^29.1.0",
        "tsc-alias": "^1.8.6",
        "typescript": "^5.4.2",
        "typescript-eslint": "^7.1.1"
    },
    "dependencies": {
        "p5": "^1.9.1"
    }
}
