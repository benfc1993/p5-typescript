{
    "name": "p5-typescript",
    "version": "4.0.0",
    "description": "A framework to make using p5 with typescript that much smoother.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm dist/bundle.js",
        "start": "esbuild ./example/index.ts --bundle --watch --outdir=./example --servedir=./example",
        "build": "node ./esbuild.mjs",
        "test": "jest src/lib/__tests__"
    },
    "pre-commit": [
        "test"
    ],
    "bin": {
        "p5-ts-types": "./bin/types",
        "p5-ts-setup": "./bin/setup"
    },
    "keywords": [
        "typescript",
        "p5",
        "ts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/benfc1993/p5-typescript.git"
    },
    "homepage": "https://github.com/benfc1993/p5-typescript#readme",
    "author": "Ben Feldberg Collins",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@types/node": "^16.10.3",
        "browser-sync": "^3.0.2",
        "esbuild": "^0.20.1",
        "esbuild-plugin-d.ts": "^1.2.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "pre-commit": "^1.2.2",
        "ts-jest": "^29.1.0",
        "tsc-alias": "^1.8.6",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@types/p5": "^1.3.1",
        "p5": "^1.5.0"
    }
}
