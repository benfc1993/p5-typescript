{
    "compilerOptions": {
        "outDir": "./dist/",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"],
            "@libTypes/*": ["src/types/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}
