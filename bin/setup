#!/usr/bin/env bash
mkdir public
mkdir src

cp node_modules/p5-typescript/project/index.html public/index.html
cp node_modules/p5-typescript/project/index.css public/index.css
cp node_modules/p5-typescript/project/index.ts src/index.ts
cp node_modules/p5-typescript/project/tsconfig.json tsconfig.json

yarn add -D parcel-bundler typescript;

npx npm-add-script \
  -k "build" \
  -v "parcel build public/index.html" \
  --force;
      npx npm-add-script \
  -k "start" \
  -v "parcel public/index.html" \
  --force;
