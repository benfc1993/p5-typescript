{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components": [
        "src/lib/components"
      ],
      "@components/*": [
        "src/lib/components/*"
      ],
      "@utils": [
        "src/lib/utils"
      ],
      "@utils/*": [
        "src/lib/utils/*"
      ],
      "@libTypes": [
        "src/lib/types"
      ],
      "@libTypes/*": [
        "src/lib/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
